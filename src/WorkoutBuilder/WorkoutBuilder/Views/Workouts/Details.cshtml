        <thead>
            <tr>
                <th>Exercise</th>
                <th>Reps</th>
                <th>Sets</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exercise in Model.Exercises)
                 {
                    <tr>
                        <td>@exercise.Exercise.Name)</td>
                        <td>@exercise.RepSet.Reps)</td>
                        <td>@exercise.RepSet.Sets</td>
                        <td>
                            |
                            @Html.ActionLink("Delete", "Delete", new { id = exercise.Id })
                        </td>
                    </tr>
              }
        </tbody>

    </table>

