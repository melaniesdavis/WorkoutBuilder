@model WorkoutBuilder.Models.Workout

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <h3>Details</h3>

    <table class="table">
        <tbody>
            <tr>
                <td>
                    <div class="pull-right">
                        <a href="@Url.Action("Add", new { id = Model.Id })"
                           class="btn btn-primary btn-sm">
                            <span class="glyphicon glyphicon-plus"></span><span class="hidden-xs"> Add Exercise</span>
                        </a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Exercise</th>
                <th>Sets</th>
                <th>Reps</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exercise in Model.Exercises)
            {
                    <tr>
                        <td>@exercise.Exercise.Name</td>
                        <td>@exercise.RepSet.Sets</td>
                        <td>@exercise.RepSet.Reps</td>
                        <td>@exercise.Notes</td>
                        <td>
                            <div class="pull-right">
                                <a href="@Url.Action("EditWorkoutExercise", new { id = exercise.Id, WorkoutId = exercise.Workout.Id , ExerciseId = exercise.Exercise.Id, RepSetId = exercise.RepSet.Id, Notes = exercise.Notes })" class="btn btn-warning btn-sm margin-right">
                                    <span class="glyphicon glyphicon-edit"></span><span class="hidden-xs"> Edit</span>
                                </a>
                                <a href="@Url.Action("DeleteWorkoutExercise", new { id = exercise.Id, WorkoutId = exercise.Workout.Id, ExerciseId = exercise.Exercise.Id, RepSetId = exercise.RepSet.Id, Notes = exercise.Notes })" class="btn btn-danger btn-sm">
                                    <span class="glyphicon glyphicon-trash"></span><span class="hidden-xs"> Delete</span>
                                </a>
                            </div>
                        </td>
                    </tr>
              }
        </tbody>

    </table>

    
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
    @Html.ActionLink("Back to List", "Index")
</p>
