@model WorkoutBuilder.Models.Workout

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayNameFor(model => model.Name)</h4>
    <hr />
