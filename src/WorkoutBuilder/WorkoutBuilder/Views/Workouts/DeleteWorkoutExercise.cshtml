@model WorkoutBuilder.Models.WorkoutExercise

@{
    ViewBag.Title = "DeleteWorkoutExercise";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>DeleteWorkoutExercise</h2>*@

<h2>Are you sure you want to delete this?</h2>
<div>
    <h4>WorkoutExercise</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Workout Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Workout.Name)
        </dd>

        <dt>
            Exercise Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Exercise.Name)
        </dd>

        <dt>
            Rep Set Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RepSet.Name)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.Notes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>

    </dl>

    @using (Html.BeginForm()) { 
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="col-md-offset-1 col-md-11">
                <input type="submit" value="Delete Exercise" class="btn btn-danger" />
                <a class="col-md-offset-1 btn btn-default" href="../Details/@(Model.WorkoutId )" role="button">Cancel</a>
            </div>
        </div>
   }
</div>
